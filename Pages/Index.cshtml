

@page
@model AnalyseSentiment.Pages.IndexModel
@{
    ViewData["Title"] = "Sentiment Analysis";
}

<h1>Sentiment Analysis</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div>
        <label for="userInput">Enter a comment:</label>
        <input id="userInput" name="UserInput" type="text" required />
    </div>
    <button type="submit">Analyze</button>
</form>



@if (Model.PredictionResult != null)
{
    
    <p>Sentiment: @(Model.PredictionResult.Prediction ? "Positive" : "Negative")</p>
    <p>Probability: @Model.PredictionResult.Probability</p>
}
else
{
    <p>Please enter a comment to analyze.</p>
}
